{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/showcov.schema.json",
  "title": "Showcov Coverage Report",
  "type": "object",
  "properties": {
    "version": {
      "description": "Version of the showcov tool or schema.",
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "environment": {
      "description": "Execution environment details.",
      "type": "object",
      "properties": {
        "coverage_xml": {
          "type": "string"
        },
        "context_lines": {
          "type": "integer",
          "minimum": 0
        },
        "with_code": {
          "type": "boolean"
        }
      },
      "required": [
        "coverage_xml",
        "context_lines",
        "with_code"
      ],
      "additionalProperties": false
    },
    "files": {
      "description": "List of source files with uncovered code sections.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": {
            "description": "Path to the source file.",
            "type": "string"
          },
          "uncovered": {
            "description": "List of uncovered line ranges.",
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "start": {
                  "type": "integer",
                  "minimum": 1
                },
                "end": {
                  "type": "integer",
                  "minimum": 1
                },
                "source": {
                  "description": "Optional source code lines in this range.",
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "line": {
                        "type": "integer",
                        "minimum": 1
                      },
                      "code": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "line",
                      "code"
                    ],
                    "additionalProperties": false
                  },
                  "minItems": 1
                }
              },
              "required": [
                "start",
                "end"
              ],
              "additionalProperties": false
            }
          }
        },
        "required": [
          "file",
          "uncovered"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "version",
    "environment",
    "files"
  ],
  "additionalProperties": false
}
